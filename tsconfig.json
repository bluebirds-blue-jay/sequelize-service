{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noStrictGenericChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "types": ["node", "mocha", "reflect-metadata", "chai-subset"]
  },
  "exclude": [
    "node_modules",
    "dts"
  ]
}